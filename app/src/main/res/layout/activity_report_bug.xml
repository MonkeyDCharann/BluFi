<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".ReportBugActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="0dp"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorSurface"
        android:elevation="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:navigationIcon="@drawable/ic_arrow_back"
        app:title="Send feedback"
        app:titleTextColor="?attr/colorOnSurface" />

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/tv_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="For other issues like spam or scams, you can get help or contact support from the Help centre."
                android:textColor="?attr/colorOnSurfaceVariant"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_help_center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Help centre."
                android:textColor="?attr/colorPrimary"
                android:textStyle="bold"
                android:textSize="14sp"
                android:layout_marginTop="4dp"
                android:clickable="true"
                android:focusable="true"/>

            <EditText
                android:id="@+id/et_subject"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@drawable/edit_text_background"
                android:hint="Subject (e.g., App Crashing)"
                android:minHeight="48dp"
                android:padding="12dp"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/et_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@drawable/edit_text_background"
                android:gravity="top|start"
                android:hint="Describe the technical issue"
                android:inputType="textMultiLine"
                android:minLines="6"
                android:padding="12dp"
                android:scrollbars="vertical"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_screenshot_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Screenshots or recordings (optional)"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_screenshot_hint"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tap screenshot to edit or remove sensitive info"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:textSize="14sp" />

            <ImageButton
                android:id="@+id/btn_add_screenshot"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/screenshot_button_background"
                android:contentDescription="Add screenshot"
                android:scaleType="centerInside"
                android:src="@drawable/ic_add_photo"
                tools:ignore="HardcodedText" />

            <ImageView
                android:id="@+id/iv_screenshot_preview"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="8dp"
                android:visibility="gone"
                android:scaleType="centerCrop"
                android:contentDescription="Screenshot preview"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/tv_privacy_note"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:text="By sending, you allow BluFi to review related technical info to help address your feedback."
                android:textColor="?attr/colorOnSurfaceVariant"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_learn_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Learn more"
                android:textColor="?attr/colorPrimary"
                android:textStyle="bold"
                android:textSize="14sp"
                android:layout_marginTop="4dp"
                android:clickable="true"
                android:focusable="true"/>


            <Button
                android:id="@+id/btn_send_feedback"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:enabled="false"
                android:text="Send"
                android:textColor="@color/white"
                app:backgroundTint="?attr/colorPrimary" />

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>