<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/layout_wallpaper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Wallpaper"
        android:textSize="16sp"
        android:padding="12dp"
        android:background="?attr/selectableItemBackground"
        android:drawableStart="@drawable/ic_wallpaper"
        android:drawablePadding="16dp"
        android:gravity="center_vertical"/>

    <TextView
        android:id="@+id/layout_help"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Help"
        android:textSize="16sp"
        android:padding="12dp"
        android:background="?attr/selectableItemBackground"
        android:drawableStart="@drawable/ic_help"
        android:drawablePadding="16dp"
        android:gravity="center_vertical"/>

    <TextView
        android:id="@+id/layout_report_bug"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Report a Bug"
        android:textSize="16sp"
        android:padding="12dp"
        android:background="?attr/selectableItemBackground"
        android:drawableStart="@drawable/ic_bug_report"
        android:drawablePadding="16dp"
        android:gravity="center_vertical"/>

    <TextView
        android:id="@+id/layout_terms_policy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Terms and Policy"
        android:textSize="16sp"
        android:padding="12dp"
        android:background="?attr/selectableItemBackground"
        android:drawableStart="@drawable/ic_policy"
        android:drawablePadding="16dp"
        android:gravity="center_vertical"/>

    <TextView
        android:id="@+id/layout_developed_by"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Developed by"
        android:textSize="16sp"
        android:padding="12dp"
        android:background="?attr/selectableItemBackground"
        android:drawableStart="@drawable/ic_code"
        android:drawablePadding="16dp"
        android:gravity="center_vertical"/>

</LinearLayout>